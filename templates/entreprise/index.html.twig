{% extends 'base.html.twig' %}

{% block title %}Listes des entreprises{% endblock %}

{% block body %}
    <h1>Listes des entreprises</h1>

    <a href="{{ path('new_entreprise')}}" class="btn btn-success">Ajouter une entreprise</a> <br>
    {% for entreprise in entreprises %}
        <a href="{{ path('show_entreprise', {'id': entreprise.id}) }}">{{ entreprise }}</a>
        <a class="btn btn-warning" href="{{ path('edit_entreprise', {'id': entreprise.id}) }}">Edit</a>
        <a class="btn btn-warning" href="{{ path('delete_entreprise', {'id': entreprise.id}) }}">Supp</a> <br>
    {% endfor %}
{% endblock %}
